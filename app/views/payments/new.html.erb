
<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto text-center">
      <h3>Congratulstions! You are going to register to <br>
       <%= @race.name %> </h3>
      <%= form_tag order_payments_path(@order) do %>
      <article>
        <h2>Order review</h2>
        <ul>
          <li><p><strong>Race Name</strong> <%=@race.name  %></p></li>
          <li><p><strong>Race Date</strong> <%=@race.date %></p></li>
          <li><p><strong>Race Location</strong> <%=@race.location  %></p></li>
          <li><p><strong>Race Distance</strong> <%=@race.distance %>Km</p></li>

        </ul>
        <label class="amount">
          <span>Amount: <%= humanized_money_with_symbol(@order.amount) %></span>
        </label>
      </article>
      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
      data-name="My Race"
      data-email="<%= current_user.email %>"
      data-description="Race - <%= @race.name %>"
      data-amount="<%= @order.amount_cents %>"
      data-currency="<%= @order.amount.currency %>"></script>
      <% end %>

    </div>
  </div>
</div>



<div class="container">
  <div class="row">
  <div class="col-lg-6 mx-auto">
    <%= simple_form_for @organisation do |f| %>
<%= f.input :name, label: "Insert the name of your sport-group" %>
<%= f.input :address, label: "Insert the address of your association" %>
<%= f.input :description, label: "A small history of the group" %>
<%= f.input :email, label: "Insert the mail adress- this is the email where users can contact tou for race info"%>
<%= f.input :phone_number, label: "Insert the phone number" %>
<%= f.input :logo, class: "form-control-file mx-auto", style: "margin: 0 auto;" %>

<%= f.button :submit, class: "btn btn-primary" %>
<% end %>

  </div>
  </div>
</div>


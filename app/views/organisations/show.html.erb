
<div class="organisation-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-offset-1 col-xs-10 organisation-content">


        <div class="avatar-top-part">
          <!-- Organisation logo -->
          <% if !@organisation.logo.url %>

            <div class="avatar-organisation-page" style="background-image: url('<%= cl_image_path "http://lorempixel.com/200/200/sports/" %>')">
            </div>


          <% else %>

            <div class="avatar-organisation-page" style="background-image: url('<%= cl_image_path @organisation.logo.url %>')">
            </div>

          <% end %>
        </div>


        <div class="organisation-top-part">

          <div class="organisation-details">
            <div class="organisation-name"> <%= @organisation.name %></div>

            <div class="orga-details-banner">

              <div class="orga-details-left">
                <div class="detail-item"><strong>Address</strong><br><%=@organisation.address%></div>
                <div class="detail-item"><strong>Phone Number</strong><br><%=@organisation.phone_number %></div>
                <div class="detail-item"><strong>Contact Email</strong><br><%=@organisation.email %></div>
              </div>

              <div class="orga-details-right">
                <div><strong>A brief history:</strong> <%=@organisation.description %></div>
              </div>
            </div>


              <div class="orga-edit-actions">

                <%= link_to edit_organisation_path(@organisation.id) do %>
                <div class="edit-orga-button"> Edit Your Organization</div><% end %>

                <%= link_to new_race_path do %>
                <div class="add-orga-button">Add a new race</div>
                <% end %>

                <%= link_to organisation_path(@organisation.id), method: :delete, data: {confirm: 'Are you really wanna delete your organisation? If u have some races in the database u will not able to complete the cancellation?'} do %>
                  <div class="delete-orga-button">Delete Your organisation</div>
                  <% end %>


              </div>

          </div> <!-- closing organisation top right page -->

        </div> <!-- closing organisation top page -->




          <hr class="hr-text-organisation-page" data-content="Your Races">


            <div class="container">
              <div class="row">


                <% if !@organisation.races.any? %>

                  <h1>You don't have any race yet. Add your first race!</h1>

                <% elsif @organisation.races.any? %>


                  <% @races.each do |race| %>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-4">

                        <div class="card-race">
                          <div class="card-race-header" style="background-image: linear-gradient(rgba(0, 0, 0, 0.23), rgba(0, 0, 0, 0)), url('<%= cl_image_path race.photo, height: 300, width: 400, crop: :fill if race.photo.url %>')">

                            <div class="card-race-top-left-container">
                              <p class="hit-name card-race-title"><%= race.name %></p>
                              <i class="fas fa-map-marker-alt card-race-marker"></i>
                              <p class="hit-name card-race-location"><%= race.location %></p>
                              <div class="star-container">
                                <% 3.times do %>
                                <i class="fas fa-star card-race-star"></i>
                                <% end %>
                                <% (5 - 3).times do %>
                                <i class="far fa-star card-race-star"></i>
                                <% end %>
                              </div>
                            </div>
                          </div>
                          <div class="card-race-body">
                            <%= link_to "Manage the race", race_path(race.id), class: "orga-race-action-button" %>


                              <% if race.bookable && race.orders %>
                              <%= link_to "Subscription list", race_subscriptions_path(race.id), class: "orga-race-action-button" %>
                              <% end %>

                          </div>

                      </div> <!-- closing card race div -->
                    </div> <!-- closing col -->
                  <% end %> <!-- closing loop over races -->
                <% end %> <!-- closing elsif any races -->



              </div> <!-- closing col -->
            </div> <!-- closing container -->





         </div> <!-- closing organisation races -->


       </div> <!-- closing col -->
    </div> <!-- closing row -->
  </div> <!-- closing container -->
</div> <!-- closing organisation wrapper -->











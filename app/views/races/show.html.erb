<div class="container">
  <div class="row">
    <div class="col-md-6">
     <h1 class="display-1"><%= @race.name %></h1>
     <div class="row px-4 basic-info-row">
      <% if @race.elevation %>
      <p><%=@race.category.upcase%> &ensp;&ensp;&ensp;<%= @race.distance%>Km/<%= @race.elevation%>m d+ &ensp;&ensp;&ensp; <p><%=@race.location%>/<%=@race.date%></p>
      <% else %>
      <p><%=@race.category.upcase%> &ensp;&ensp;&ensp;<%= @race.distance%>Km &ensp;&ensp;&ensp; <p><%=@race.location%>/<%=@race.date%></p>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-10 mb-5">
        <%= @race.description%>
      </div>
    </div>
    <div class="row">
      <div class="col-md-10">
       <p>Organizer: <%= link_to organisation_path(@organizer.id) do%> <%= @organizer.name %> <% end %></p>
       <p>Website <a href="<%= @race.website %>"> <%=@race.website%></a></p>
       <p>Starting Point: <%= @race.starting_point %></p>
       <p>Starting time: <%= @race.starting_time %></p>
       <p>Goodies: <%= @race.goodies %></p>
       <p>Price: <%= humanized_money_with_symbol(@race.fee_cents)%></p>
       <% if @race.discount_fee_cents %>
       <p class="alert alert-success"> This race has a special price for early subscription. Untill the <%= @race.discount_fee_finish %> yuo can subscribe and pay just <%= humanized_money_with_symbol(@race.discount_fee_cents)%></p>
       <% end %>
       <p>The subscription for <%= @race.name %> open the <%= @race.subscription_start.strftime("%e %b %Y ") %> and will <%= @race.subscription_end.strftime("%e %b %Y ") %>. The maximum race capacity is <%= @race.capacity %> </p>
     </div>
   </div>
   <% if @race.route %>
   <div class="row">
    <div class="col-md-10">
       <div id="map" style="height:400px; width: 400px;"></div>
     </div>
   </div>
   <% end %>
 </div>

 <% if @race.photos %>
 <div class="col-md-6">

  <div id="carouselExampleControls" class="mt-5 carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item-active">
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

      <%= link_to "Edit your race", edit_race_path(@race.id)  %>
      <%= link_to "Delete Your Race", race_path(@race.id), method: :delete, data: {confirm: 'Are you really wanna delete your Race? If u have some subscription for the race u will not able to complete the cancellation'} %>


      <% if user_signed_in? %>
      <%= form_tag race_orders_path(@race.id) do %>
      <%= hidden_field_tag 'race_id', @race.id %>
      <%= submit_tag 'Register at the Race and pay online', class: 'btn btn-primary' %>
      <% end %>

      <% else %>
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Launch demo modal
      </button>
      <% end %>

      <%= link_to "Manage your photo", new_race_photo_path(@race.id) %>

    </div>

  </div>
</div>


<!-- modal for sugnup
-->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <!-- <h5 class="modal-title" id="exampleModalLabel">Modal title</h5> -->
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render "devise/registrations/new", resource: User.new %>
      </div>
    </div>
  </div>
</div>


 </div>
 <% end %>


</div>
</div>


<script>
  <% if @race.route  %>
  var data =  <%= raw @race.route.pathfile %>;
  <% end %>
  console.log(data);
  generate_route(data);

  function generate_route(array){
    var map = L.map('map',{
      center: [43.64701, -79.39425],
      zoom: 15
    });

    var latlngs = array
    var polyline = L.polyline(latlngs, {color: 'red'}).addTo(map);
    map.fitBounds(polyline.getBounds());
    console.log(array);

    L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {
      attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);
  }
</script>


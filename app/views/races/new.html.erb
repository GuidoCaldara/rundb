
<div class="container py-5">
  <div class="row py-4">
    <div class="col-sm-12 text-center">
      <h1>Insert Your Race</h1>
      <div class="progress" style="height: 25px">

        <div class="progress-bar" role="progressbar" style=" width: 33%;" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"> Step 1/3 - Insert the race informations  </div>
      </div>
    </div>
  </div>
  <div class="row mb-5">
    <div class="col-md-10 mx-auto">
      <div id="accordion" role="tablist" aria-multiselectable="true">
        <div class="card">
          <%= simple_form_for @race do |f| %>
          <div class="card-header" role="tab" id="headingOne">
            <h5 class="mb-0">
              <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                Race Informations <i class="fas fa-caret-down"></i>


              </a>
            </h5>
          </div>

          <div id="collapseOne" class="collapse show" role="tabpanel" aria-labelledby="headingOne">
            <div class="card-block py-4 px-5 ">
              <%= f.input :name, label: 'Insert The race Name', error: 'Username is mandatory, please specify one', html: { autocomplete: 'off' } %>
              <%= f.input :category, priority: [ "---" ], collection: [ "Trail", "Road", "Skyrace", "VerticalKM"], label: "Select the race category" %>
              <%= f.input :distance, label: "Insert the race distance in Km", input_html: {  min: '0', step: 'any' }%>
              <%= f.input :elevation, label: "Insert the positive elevation in meters (Not required for road races)", input_html: { min: '0', step: '100' }%>
              <%= f.input :location, id: "race_location", label: "Race Location?" %>
              <%= f.input :date, label: "Insert the race date", as: :date, start_year: Date.today.year, end_year: Date.today.year + 2, order: [:day, :month, :year]%>
              <%= f.input :first_edition, label: "Fist edition year", as: :date, start_year: Date.today.year-20, end_year: Date.today.year, order: [:year] %>
              <%= f.input :website, label: "Race Website", placeholder: 'https://yoursite.com', html: { autocomplete: 'off' }  %>

            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-header" role="tab" id="headingTwo">
            <h5 class="mb-0">
              <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                Race Description <i class="fas fa-caret-down"></i>

              </a>
            </h5>
          </div>
          <div id="collapseTwo" class="collapse" role="tabpanel" aria-labelledby="headingTwo">
            <div class="card-block py-4 px-5">
              <%=  f.input :description, label: "Tell something about your race", as: :text, :input_html => { 'rows' => 9, autocomplete: 'off'} %>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-header" role="tab" id="headingThree">
            <h5 class="mb-0">
              <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                Extra Information <i class="fas fa-caret-down"></i>

              </a>
            </h5>
          </div>
          <div id="collapseThree" class="collapse" role="tabpanel" aria-labelledby="headingThree">
            <div class="card-block py-4 px-5">
              <%=  f.input :goodies, label: "Wich goodies are included in the race pack?", as: :text, html: { autocomplete: 'off' }%>
              <%= f.input :starting_point, label: "Wher will be the starting point?"%>

              <%= f.input :starting_time, as: :time, minute_step: 30, label: "Insert the starting time", html: { autocomplete: 'off' }%>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="card-header" role="tab" id="headingFour">
            <h5 class="mb-0">
              <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                Subscription And payment <i class="fas fa-caret-down"></i>


              </a>
            </h5>
          </div>
          <div id="collapseFour" class="collapse" role="tabpanel" aria-labelledby="headingFour">
            <div class="card-block py-4 px-5">
              <h5> Do you wana Run Db manage your subscription sistem? <a href="">LINK_TO</a> </h5>
              <%=   f.collection_radio_buttons :bookable, [[false, 'No'] ,[true, 'Yes']], :second, :last %>
              <h5> If not, please provide a link to redirect the user to subscription page. If you don't have it yet dont'worry, you can insert it later or choose to let Run-db manage your subscription</h5>
              <%=  f.input :subscription_link, label:false,  placeholder: 'https://yoursite.com/subsctiption' %>
              <%= f.input :fee_cents, label: "Insert the race price in â‚¬", input_html: { min: '0', step: 'any', autocomplete: "off" }%>
              <h3> Do u wana propost a discount price for the early subscription?</h3>

              <%= f.input :discount_fee_cents, label: "Insert the secial price", input_html: {  min: '0', step: 'any' } %>
              <%= f.input :discount_fee_finish, as: :date, start_year: Date.today.year, end_year: Date.today.year + 2, order: [:day, :month, :year], label: "If yes, untill wich date u wana propose the special price?" %>
              <%= f.input :subscription_start, label: "When the subscription period start?", as: :date, start_year: Date.today.year, end_year: Date.today.year + 2, order: [:day, :month, :year] %>
              <%= f.input :subscription_end, label: "When the subscription period end?", as: :date, start_year: Date.today.year, end_year: Date.today.year + 2, order: [:day, :month, :year] %>
              <%= f.input :capacity, label: "You have a maximum number of subscription? If yes, how many?" %>
              <%= f.button :submit, class: "btn btn-primary" %>


            </div>
          </div>
        </div>



      </div>

    </div>
  </div>
</div>
<% end %>

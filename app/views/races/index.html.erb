


<div>
 <input id="search-input" placeholder="Search for races">
 <!-- We use a specific placeholder in the input to guides users in their search. -->
 <div class="row aisdemo-filter">
  <div class="col-sm-2 aisdemo-filter-title">Race Categories
  </div>
  <div id="race_categories">
  </div>
</div>

<div class="row aisdemo-filter">
  <div class="col-sm-2 aisdemo-filter-title">Distance Range
  </div>
  <div class="col-sm-9" id="distance">
  </div>
</div>

<main class="wrapper">
  <aside class="left">
    <div id="refinement-list">
      <h3>Dates</h3>
      <div id="calendar" class="daterange">
      </div>
    </div>
  </div>



  <div class="main-container">




    <!-- CARD WRAPPER -->

    <div class="card-wrapper">
      <div id="hits"></div>
      <div class="container">
        <div class="row">

          <script type="text/html" id="hit-template">
            <div class="hit">
              <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
                <a href="/races/{{id}}">
                  <div class="card-race">

                    <div class="card-race-header" style="background-image: url('http://res.cloudinary.com/dxkimzdwk/image/upload/v1519895648/suuntoutmb.jpg')">
                      <p class="hit-name">{{{_highlightResult.name.value}}}</p>
                      <p class="hit-name">{{{_highlightResult.location.value}}}</p>
                      <!-- <p class="hit-name">{{{_highlightResult.distance.value}}}</p> -->
                      <!-- can not display distance because it is an integer so we should some how convert it to a string -->
                    </div>
                    <div class="card-race-body">
                      <p class="hit-name element">{{{_highlightResult.category.value}}}</p>
                      <p class="hit-name element">{{{_highlightResult.distance.value}}} km</p>
                      <p class="hit-name element last">{{{_highlightResult.reviews.value}}} reviews</p>
                    </div>
                  </div>
                </a>
              </div>
            </div>
          </script>


        </div>
      </div>
    </div>


<!-- MAP CONTAINER -->

    <div class="map-container">

        <div id="map">
        </div>
    </div>


  </div>
</div>

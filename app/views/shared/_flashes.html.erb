<% flash.each do |key, value| %>
  <% if key == "notice" %>
  <% key = "success" %>
  <% elsif key == "alert" %>
  <% key = "danger" %>
  <% elsif key = "success" %>
    <% key = "success" %>
<% end %>
  <%= content_tag :div, class: "alert alert-#{key}" do %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= value %>
  <% end %>
<% end %>

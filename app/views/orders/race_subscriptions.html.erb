<div class="container py-4 ">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="display-3">Subscriptions list for <%= @race.name %>
      </div></h1>
    </div>

    <div class="row">

      <div class="col-lg-12">


        <table class="table subscription-table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Gender</th>
              <th scope="col">Birth date</th>
              <th scope="col"> Society </th>
            </tr>
          </thead>
          <tbody>
            <% @count = 1 %>

            <% @orders.each do |order| %>
            <tr>
              <td><%= @count %></th>
              <td><%= order.first_name%></td>
              <td><%= order.last_name %></td>
              <td><%= order.gender %></td>
              <td><%= order.date_of_birth %></td>
              <td><%= order.group %></td>
            </tr>
            <% @count += 1 %>
            <% end %>
          </tbody>
        </table>
          <%= link_to race_path(@race.id) do %>
           <button class ="go-back-button btn "> Back to the race page</button>
          <% end %>

      </div>
    </div>

  </div>



